<div class="container pt-3">
  <div class="row">
    <div class="col-12">
      <h1>
        <span>みんなの</span>
        <span class="font_red">成れ果て</span>
      </h1>

      <div class="users">
        <% if @investments.present? %>
          <% @investments.each do |investment| %>
            <li>
              <%= image_tag 'moguro.png',width: '5%', height: '5%', class: "image_list" %>
              <%= investment.user.name %>
              <% if investment.total > 30000 %>
                <span class="font_yellow"><%= "　→　クリア！" %></span>
              <% else %>
                <span class="font_red"><%= "　→　破産" %></span>
              <% end %>
              <br><br><%= "最終：#{investment.total / 10000.to_f.round(1)}億円"%><br><%= "（株: #{investment.stock}万円、債権: #{investment.bonds}万円、"%><br class="visible-xs-block"><%= "パチンコ: #{investment.pachinko}万円、貯金: #{investment.saving}万円）" %>
            </li>
          <% end %>
        <% else %>
          <p><%= 'まだ誰も相談していません' %></p>
        <% end %>
      </div>
    </div>
  </div>
  <div>
    <%= link_to '戻る', root_path %>
  </div>
</div>