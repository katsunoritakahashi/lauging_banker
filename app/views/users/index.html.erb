<div class="container pt-3">
  <div class="row">
    <div class="col-12">
      <h1>
        <span>みんなの</span>
        <span class="font_red">成れ果て</span>
      </h1>
      <div class="users">
        <% if @users.present? %>
          <% @users.each do |user| %>
            <li>
              <%= image_tag 'maxresdefault.jpg',width: '25%', height: '25%', class: "image_list" %>
              <%= user.name %>
              <br><%= "年収: #{user.income}万円" %>
              <br><%= "貯金: #{user.saving}万円" %>
              <%= image_tag 'sozai_cman_jp_20201231233007.png',width: '5%', height: '5%', class: "image_arrow" %>
              <%= "3.5億！" %>
            </li>
          <% end %>
        <% else %>
          <p><%= '人生設計がありません' %></p>
        <% end %>
      </div>
    </div>
  </div>
  <div>
    <%= link_to '戻る', root_path %>
  </div>
</div>