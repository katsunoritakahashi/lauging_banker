<div class="container pt-3">
  <div class="row">
    <div class="col-12">
      <h1>
        <span>1年後、、、</span>
        <span class="font_red"><%= "#{@result.total / 10000.to_f.round(1)}億円" %></span>
      </h1>
      <h1 class="font_red">
        <% if @result.total > 30000 %>
          <%= image_tag 'moguro.png',width: '25%', height: '25%', class: "image_list" %>
          <br><span class="font_yellow"><%= "#{current_user.name}は無事借金を返済できました" %></span>
        <% else %>
          <%= image_tag 'moguro.png',width: '25%', height: '25%', class: "image_list" %>
          <br><%= "#{current_user.name}は破滅を迎えました" %>
        <% end %>
      </h1>

      <%= line_chart Investment.where(user_id: current_user.id).pluck(:month, :total), curve: false, discrete: true, colors: ["#fff", "#fff"] %>

      <div class="users">
        <% if @investments.present? %>
          <% @investments.each do |investment| %>
            <li>
              <%= "#{investment.month}ヶ月目" %>
              <br><%= "#{investment.total / 10000.to_f.round(1)}億円（株: #{investment.stock}万円、債権: #{investment.bonds}万円、パチンコ: #{investment.pachinko}万円、貯金: #{investment.saving}万円）" %>
            </li>
          <% end %>
        <% else %>
          <p><%= '人生設計がありません' %></p>
        <% end %>
      </div>
    </div>
  </div>
  <div>
    <%= link_to '戻る', logout_path, method: :delete %>
  </div>
</div>